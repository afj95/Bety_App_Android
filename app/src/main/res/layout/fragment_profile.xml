<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/dark_android_wallpaper_4574522"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#05FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="55dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                >

                <ImageButton
                    android:id="@+id/image_profile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_edit"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:tint="@color/black"
                    />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                android:layout_marginBottom="10dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/text_name_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                />

        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/profile_info_background"-->
<!--            android:layout_marginHorizontal="10dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:padding="15dp"-->
<!--            >-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#000000"-->
<!--                android:text="name"-->
<!--                />-->

<!--        </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/text_username_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/text_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/text_password_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:text="password"
                tools:ignore="TextViewEdits" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/text_phone_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_info_background"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            >

            <TextView
                android:id="@+id/text_joined_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                />

        </LinearLayout>


        <Button
            android:id="@+id/button_logout_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/logout_button_background"
            android:textColor="#000000"
            android:text="log out"
            android:textAllCaps="false"
            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>