<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#9AF5FFFF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/recycler_member_background"
        >

        <TextView
            android:id="@+id/text_member_name_recycler_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="2dp"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="member name"
            />

        <TextView
            android:id="@+id/text_member_email_recycler_template"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:textColor="#4C4C4C"
            android:text="member email"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#000000"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

</RelativeLayout>