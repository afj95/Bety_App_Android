<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="555dp"
    android:padding="0dp"
    android:background="@drawable/dialog_members_details_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="5dp"
        >

        <ImageButton
            android:id="@+id/button_add_new_member"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_add_person"
            android:layout_margin="5dp"
            android:elevation="22dp"
            android:contentDescription="Add new member to the home"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_members_template"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>